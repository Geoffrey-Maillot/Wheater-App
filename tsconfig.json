{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*"]
}
